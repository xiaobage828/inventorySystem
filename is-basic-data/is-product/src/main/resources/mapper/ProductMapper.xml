<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xiaobage.product.domain.product.repository.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.xiaobage.product.domain.product.repository.po.ProductPO">
        <id column="id" property="id" />
        <result column="sale_status" property="saleStatus" />
        <result column="img_url" property="imgUrl" />
        <result column="pro_no" property="proNo" />
        <result column="brand_id" property="brandId" />
        <result column="category_id" property="categoryId" />
        <result column="product_name" property="productName" />
        <result column="cost_price" property="costPrice" />
        <result column="wholesale_price" property="wholesalePrice" />
        <result column="retail_price" property="retailPrice" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, sale_status, img_url, pro_no, brand_id, category_id, product_name, cost_price, wholesale_price, retail_price, description, create_time, update_time
    </sql>

</mapper>
