<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xiaobage.inventory.domain.inventory.repository.mapper.InventoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.xiaobage.inventory.domain.inventory.repository.po.InventoryPO">
        <id column="id" property="id" />
        <result column="warehouse_id" property="warehouseId" />
        <result column="product_id" property="productId" />
        <result column="total_quantity" property="totalQuantity" />
        <result column="lock_quantity" property="lockQuantity" />
        <result column="damaged_quantity" property="damagedQuantity" />
        <result column="units" property="units" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, warehouse_id, product_id, total_quantity, lock_quantity, damaged_quantity, units, create_time, update_time
    </sql>

</mapper>
